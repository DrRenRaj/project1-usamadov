<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MotorcycleDetailFragment">

    <!-- TextView for Car Name -->
    <TextView
        android:id="@+id/motorcycle_name"
        style="@style/HeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="Suzuki"/>

    <!-- TextView for Car Details -->
    <TextView
        android:id="@+id/motorcycle_details"
        style="@style/DetailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        tools:text=" information about the motorcycle "/>

    <!-- TextView for Car Performance -->
    <TextView
        android:id="@+id/motorcycle_performance"
        style="@style/DetailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:paddingTop="8dp"
        tools:text="Performance Details"/>
</LinearLayout>
